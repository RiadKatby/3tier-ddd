@using System.Security.Principal
@if (Request.IsAuthenticated)
{
    IIdentity p1 = (IIdentity)User.Identity;
    UserProfileIdentity userIdentity  = (UserProfileIdentity) p1;
    //= User.Identity as UserProfileIdentity;

    //UserProfileIdentity userIdentity = User.Identity as UserProfileIdentity;

    var imageUrl = "~/content/Images/photo.jpg";
    var userPhoto = Util.GetUserThumbPhotoUrl(userIdentity.Name);
    //You can put your image URLs in user claims and read from here
    if (!string.IsNullOrEmpty(userPhoto))
    {
        imageUrl = userPhoto;
    }

    <li>
        <a href="#"><i class="fa fa-user"></i>&nbsp;&nbsp;الملف الشخصي <span class="arrow"></span></a>
        <div class="megamenu halfdiv">
            <div class="row">

                <div class="col-md-7 col-xs-7 text-right">
                    <div class="text-right text-primary">@userIdentity.GetClaimValue("FullName")</div>
                    <p class="text-muted">
                        بريد إلكتروني : @userIdentity.GetClaimValue("Email")
                    </p>
                </div>

                <div class="col-md-5 col-xs-5 text-center">
                    <img src="@Url.Content(imageUrl)" alt="Alternate Text" class="text-center img-rounded" />
                </div>
            </div>

            <div class="row">
                <div class="navbar-footer-content">
                    <div class="row">
                        <div class="col-md-6 col-xs-6">
                            @*@if (!Convert.ToBoolean(userIdentity.GetClaimValue("IsADUser")))*@
                            {
                                @Html.ActionLink("تغيير كلمة المرور", "changePassword", "Account", new { ReturnUrl = Request.Url }, new { @class = "btn btn-default btn-sm pull-right" })
                            }
                        </div>
                        <div class="col-md-6 col-xs-6">
                            @Html.ActionLink("تسجيل خروج", "LogOut", "Account", null, new { @class = "btn btn-danger btn-sm pull-left" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </li>
}


