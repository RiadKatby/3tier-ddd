@model RefactorName.WebApp.Models.ChangePasswordViewModel
@using MvcHtmlHelpers  

@section Styles
{
    <link href="~/Content/signin.css" rel="stylesheet" />
}
@{
    Layout = "~/Views/Shared/_ENLayout.cshtml";
    ViewBag.Title = "Change Password";
}

<div class="center-block SSO mk-shadow" style="max-width:600px;">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        
        <img class="signin-logo" src='@Url.Content("~/content/Images/Login-logo.png")'>

        @Html.MCIStartFormItemsRow()
        @Html.MCIPasswordItemFor(m => m.OldPassword, 12, new { @class = "focus", placeholder="كلمة المرور الحالية", maxLength="50" }, true)
        @Html.MCIPasswordItemFor(m => m.NewPassword, 12, new { placeholder = "كلمة المرور الجديدة", maxLength = "50" })
        @Html.MCIPasswordItemFor(m => m.ConfirmPassword, 12, new { placeholder = "تأكيد كلمة المرور الجديدة", maxLength = "50" })
        @Html.MCIEndFormItemsRow()

        <br class="clearfix" />
        <div class="pull-left">
            <a class="btn btn-default" href='@ViewBag.ReturnUrl'>إلغاء</a>
            @Html.MCISubmitButton("موافق", "", "", new { @class = "btn btn-primary" })
        </div>
        <br />
    }
</div>
