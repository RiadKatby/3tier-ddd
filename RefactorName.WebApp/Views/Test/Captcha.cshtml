@model RefactorName.Web.Models.CaptchaModel

@{
    Layout = Layout = "~/Views/Shared/_LayoutDemo.cshtml";
    ViewBag.Title = "Captcha";
}

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-heading">Captcha</div>
        <div class="panel-body">
            <p class="ltr">the Captcha image will be generated by default by the action '_CaptchaImage' in Shared Controller.
            But you can provide your own image source url inside the helper.
            </p>
            @using (Html.MCIBeginItemsRow())
            {
                @Html.MCICaptchaItemFor(m => m.Captcha)
            }
        </div>
        <div class="panel-footer text-left">
            @Html.MCISubmitButton("submit", htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    </div>
}


